html
    head
        title Harmlessly
        meta(charset="utf-8")
        meta(name="viewport" content="width=device=width, initial-scale=1.0")
        link(rel="stylesheet" href="./css/materialize.min.css")
        link(rel="stylesheet" href="./css/home.css")
        link(rel="manifest" href="./manifest.json")
        link(rel="icon" href="./img/logo.png" type="image")
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        script(src="./js/jquery-3.4.1.min.js")
        script(src="./js/materialize.min.js")
        script(src="./js/home.js")
    body
        div#dashboard
            div#dashboardNavBar
                div
                    p#dashboardBtn Dashboard
                    div.dashboardSelected
                div
                    p#calendarBtn Calendar
                    div.dashboardSelected
            div#dashboardMiniCalendar
                div 
                    p#dashboardMiniCalendarTitle Calendar
                    p#dashboardMiniCalendarMonth
                div
                    p.bold.weekDaysMiniCalendar Mon
                    p.bold.weekDaysMiniCalendar Tue
                    p.bold.weekDaysMiniCalendar Wed
                    p.bold.weekDaysMiniCalendar Thu
                    p.bold.weekDaysMiniCalendar Fri
                    p.bold.weekDaysMiniCalendar Sat
                    p.bold.weekDaysMiniCalendar Sun
            div#dashboardSubstances
                div#displayEntriesLoading.preloader-wrapper.big.active
                    div.spinner-layer.spinner-blue-only
                        div.circle-clipper.left
                            div.circle
                        div.gap-patch
                            div.circle
                        div.circle-cippler.right
                            div.circle
        div#newSubstance
            div#newSubstanceFirst
                h5 I'm taking...
                div#displaySubstances
                    div#displaySubstancesLoading.preloader-wrapper.big.active
                        div.spinner-layer.spinner-blue-only
                            div.circle-clipper.left
                                div.circle
                            div.gap-patch
                                div.circle
                            div.circle-cippler.right
                                div.circle
            div#newSubstanceSecond
                i#newSubstanceSecondBack.small.material-icons.backArrow arrow_back
                h5 How much?
                div#getDosage
                    div
                        div.input-field.inline
                            input#inputDose.validate(placeholder="100" type="number" data-length="4")
                        div#inputDoseScale
                    img#submitDosage(src="./img/icons/check.png")
            div#newSubstanceThird
                i#newSubstanceThirdBack.small.material-icons.backArrow arrow_back
                h5 When?
                input#inputDoseTime.timepicker(placeholder="Time" type="text" readonly="true")
                input#inputDoseDate.datepicker(placeholder="Date" type="text")
                img#submitDoseTime(src="./img/icons/check.png")
            div#newSubstanceFourth
                i#newSubstanceFourthBack.small.material-icons.backArrow arrow_back
                h5
                div.moodsBox#moodInputBefore
                    h5 Before taking it?
                    div.moods.z-depth-4
                        img.bad(src="./img/moods/bad.png")
                        img.neutral(src="./img/moods/neutral.png")
                        img.good(src="./img/moods/good.png")
                div.moodsBox#moodInputDuring
                    h5 While on it?
                    div.moods.z-depth-4
                        img.bad(src="./img/moods/bad.png")
                        img.neutral(src="./img/moods/neutral.png")
                        img.good(src="./img/moods/good.png")
                div.moodsBox#moodInputAfter
                    h5 After you've comedown?
                    div.moods.z-depth-4
                        img.bad(src="./img/moods/bad.png")
                        img.neutral(src="./img/moods/neutral.png")
                        img.good(src="./img/moods/good.png")
                a#skipMoodsInput Skip for now
                img#submitMoods(src="./img/icons/check.png")
                div#uploadingInputsLoading.preloader-wrapper.big.active
                    div.spinner-layer.spinner-blue-only
                        div.circle-clipper.left
                            div.circle
                        div.gap-patch
                            div.circle
                        div.circle-cippler.right
                            div.circle
        footer
            div#footerNavBar
                    img#footerDashboardBtn(src="./img/icons/social.png")(name="social")
                    img#footerWikipediaBtn(src="./img/icons/wiki.png")(name="wiki")
                    img#footerNewSubstanceBtn(src="./img/icons/add.png")(name="add")
                    img#footerCalendarBtn(src="./img/icons/calendar.png")(name="calendar")
                    img#footerBurgerBtn(src="./img/icons/burger.png")(name="burger")
                    div#footerNewSubstanceBtnBorder
            
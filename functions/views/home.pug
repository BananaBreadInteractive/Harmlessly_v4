html
    head
        title Harmlessly
        meta(charset="utf-8")
        meta(name="viewport" content="width=device=width, initial-scale=1.0")
        link(rel="stylesheet" href="./css/home.css")
        link(rel="stylesheet" href="./css/materialize.min.css")
        link(rel="manifest" href="./manifest.json")
        link(rel="icon" href="./img/logo.png" type="image")
        script(src="./js/materialize.min.js")
        script(src="./js/jquery-3.4.1.min.js")
        script(src="./js/home.js")
    body
        header
            div
                img.standardImage(src="./img/icons/settings.png")
                img.image#logo(src="./img/logo_no_background.png")
                img.standardImage(src="./img/icons/messages.png")
        div.content
            p#welcomeHome Content
            p Test
            p Test
            p Test
        footer
            li
                img.standardImage(src="./img/icons/social.png")
                img.standardImage(src="./img/icons/wiki.png")
                img#add.image(src="./img/icons/add.png")
                img.standardImage(src="./img/icons/calendar.png")
                img.standardImage(src="./img/icons/burguer.png")
        div#addUse
            div
                p What are you consuming?
                select#substancesSelect
            div
                p When?
                select#timeSelect
                    option Now
                    option 1 Hour
                    option 2 Hours
                    option 3 Hours
                    option 4 Hours
                    option 5 Hours
            div
                div#addDose.waves-effect.waves-blue.btn.white Add dose
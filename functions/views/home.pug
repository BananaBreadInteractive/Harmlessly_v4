html
    head
        title Harmlessly
        meta(charset="utf-8")
        meta(name="viewport" content="width=device=width, initial-scale=1.0")
        link(rel="stylesheet" href="./css/home.css")
        link(rel="stylesheet" href="./css/materialize.min.css")
        link(rel="manifest" href="./manifest.json")
        link(rel="icon" href="./img/logo.png" type="image")
        script(src="./js/materialize.min.js")
        script(src="./js/jquery-3.4.1.min.js")
        script(src="./js/home.js")
    body
        header
            div
                img.standardImage(src="./img/icons/settings.png")
                img.image#logo(src="./img/logo_no_background.png")
                img.standardImage(src="./img/icons/messages.png")
        div.content
            p#welcomeHome Content
        footer
            li
                img.standardImage(src="./img/icons/social.png")
                img.standardImage(src="./img/icons/wiki.png")
                img#add.image(src="./img/icons/add.png")
                img.standardImage(src="./img/icons/calendar.png")
                img.standardImage(src="./img/icons/burguer.png")
        div#addMood
            div
                p How do you feel?
                div
                    img#good(src="./img/moods/good.png")
                    img#neutral(src="./img/moods/neutral.png")
                    img#bad(src="./img/moods/bad.png")
        div#addUse

            div#substancePicker
                p Substance
                div#substances
            div#substanceDose
                p Dose
                p.range-field
                    input#dosage(type="range" min="5" step="5" max="995")
                div
                    p#doseVal 0
                    select#selectScale
                        option(value = "μg") μg or mcg
                        option(value = "mg") mg
                        option(value = "g") g
                label
                    input#unknownDose(type="checkbox")
                    span Unknown
            div
                div#addDose.waves-effect.waves-blue.btn.blue.lighten-1.disabled NEXT